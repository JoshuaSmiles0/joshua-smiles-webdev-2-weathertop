<table class = "table is-fullwidth">
  <thead>
    <trow>
      <th>Weather Code</th>
      <th>Temperature</th>
      <th>Windspeed</th>
      <th>Wind Direction</th>
      <th>Pressure</th>
    </trow>
  </thead>
  <tbody>
    {{#each station.reports}}
    <tr>
      <td>
        {{code}}
      </td>
      <td>
        {{temp}}
      </td>
      <td>
        {{windSpeed}}
      </td>
      <td>
        {{windDirection}}
      </td>
      <td>
        {{pressure}}
      </td>
      <td>
        <a href = "/station/{{../station._id}}/deleteReport/{{_id}}" class="button">
          {{>icons/delete}}
        </a>
      </td>
    </tr>.
    {{/each}}
  </tbody>
</table>